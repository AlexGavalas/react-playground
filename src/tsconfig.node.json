{
    "compilerOptions": {
        "outDir": "../server-dist",
        "module": "CommonJS",
        "target": "ES6",
        "lib": ["esnext"],
        "strict": true,
        "allowJs": false,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmit": false,
        "sourceMap": false
    },
    "include": ["./**/*"]
}
